package com.example.demo.service;

import com.example.demo.entity.Alert;
import com.example.demo.entity.Expense;
import com.example.demo.repository.AlertRepository;
import com.example.demo.repository.ExpenseRepository;
import org.springframework.stereotype.Service;

import java.time.LocalDate;
import java.time.LocalDateTime;
import java.util.List;

@Service
public class AlertService {

    private final AlertRepository alertRepository;
    private final ExpenseRepository expenseRepository;

    // Example monthly limit (you can later make this dynamic per user)
    private final double MONTHLY_LIMIT = 50000;

    public AlertService(AlertRepository alertRepository, ExpenseRepository expenseRepository) {
        this.alertRepository = alertRepository;
        this.expenseRepository = expenseRepository;
    }

    // Fetch all alerts
    public List<Alert> getAllAlerts() {
        return alertRepository.findAll();
    }

    // Evaluate expenses & create alerts if limit exceeded
    public void evaluateAlerts() {
        LocalDate today = LocalDate.now();
        LocalDate startOfMonth = today.withDayOfMonth(1);
        LocalDate endOfMonth = today.withDayOfMonth(today.lengthOfMonth());

        List<Expense> monthlyExpenses = expenseRepository.findByDateBetween(startOfMonth, endOfMonth);

        double total = monthlyExpenses.stream().mapToDouble(e -> e.getAmount() != null ? e.getAmount() : 0).sum();

        // Only add alert if exceeded
        if (total > MONTHLY_LIMIT) {
            Alert alert = new Alert();
            alert.setTitle("Monthly limit exceeded");
            alert.setMessage("Your monthly expenses ₹" + total + " exceeded your limit of ₹" + MONTHLY_LIMIT);
            alert.setSeverity("CRITICAL");
            alert.setCreatedAt(LocalDateTime.now());
            alertRepository.save(alert);
        } else if (total >= MONTHLY_LIMIT * 0.9) {
            Alert alert = new Alert();
            alert.setTitle("Approaching monthly limit");
            alert.setMessage("You've spent ₹" + total + " (≥90% of ₹" + MONTHLY_LIMIT + ")");
            alert.setSeverity("WARNING");
            alert.setCreatedAt(LocalDateTime.now());
            alertRepository.save(alert);
        }
    }
}
